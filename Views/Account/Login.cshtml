@model Ctf.Models.ViewModels.LoginViewModel
<div class="row">

    <div class="col">
        <form action="" method="post">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">TeamName</label>
                <div class="col-sm-10">
                <input name="TeamName" type="text" class="form-control" id="inputEmail3" placeholder="Leet">
                </div>
            </div>
            <div class="form-group row" hidden id="admin-password-login">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Admin Password</label>
                <div class="col-sm-10">
                    <input name="AdminPassword" type="password" class="form-control" id="inputPassword3" placeholder="Password">
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Log på</button>
        </form>
    </div>
    <div class="col">
        <p>
            Vi har laget den enkleste login løsningen, så dere slipper å styre med Lastpass for å generer unike passord. 
        </p>
        <p>
            Administrator må selvsagt logge inn med passord som og feltet kan aktiveres <button class="btn btn-link" id="activate-admin-login">her</button>
        </p>
    </div>

</div>

@section Scripts{
    <script src="~/js/login.js" asp-append-version="true"></script>
}
